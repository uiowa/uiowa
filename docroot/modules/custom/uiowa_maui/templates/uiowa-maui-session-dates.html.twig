{#
/**
 * @file
 * Default theme implementation for MAUI session date.
 *
 * Available variables:
 * - heading_size: The heading size to use for the date.
 * - dates: An array of session dates grouped by start/end times.
 *   - start: The formatted start date.
 *    - end: The formatted end date.
 *    - items: Array of items occuring on this date.
 *      - description: The description of the item.
 *      - session: The session it applies to.
 *
 * @see template_preprocess_uiowa_maui_session_date()
 *
 * @ingroup themeable
 */
#}

{{ attach_library('uids_base/event') }}
{{ attach_library('uids_base/badge') }}

{% for date in dates %}
  {% for item in date.items %}
    {% set date_description = item.description ~ ' - ' ~  item.session %}

  {%
    set classes = [
    'card--media-left',
    'uiowa-card-event',
    'card--centered-left',
    'card--alignment-left',
  ]
  %}

  {% set event_block = {
    'attributes': attributes.addClass(classes),
    'card_subtitle': date_description,
    'card_title': date.start != date.end ? date.start ~ ' - ' ~ date.end : date.start,
    'card_icon': "icon",
    'heading_level': heading_size,
    'title_prefix': title_prefix,
    'title_suffix': title_suffix,
  } %}

  {% embed '@uids_base/uids/card.html.twig' with event_block only %}
  {% endembed %}
  {% endfor %}
{% endfor %}
