    'name' => t('Brand'),
    'description' => t('Custom tokens for brand.uiowa.edu'),
  ];
  $node['custom_log'] = [
    'name' => t('Custom Log'),
    'description' => t('Custom node log'),
  ];
  return [
    'types' => ['brand' => $type],
