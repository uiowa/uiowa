{%
  set classes = [
  'node',
  'node--type-' ~ node.bundle|clean_class,
  node.isPromoted() ? 'node--promoted',
  node.isSticky() ? 'node--sticky',
  not node.isPublished() ? 'node--unpublished',
  view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  'card--list',
  'card--media-right',
]
%}

{% set headline_level = heading_size ?: 'h3' %}
{{ attach_library('classy/node') }}
{{ attach_library('uids_base/node-type-page') }}

{% set aos_card = {
  'attributes': attributes.addClass(classes),
  'card_title': label,
  'card_link_url': url,
  'headline_level': headline_level,
} %}

{% embed '@uids_base/uids/card.html.twig' with aos_card only %}
  {# @todo Add content_attributes.addClass('node__content media-body') #}
  {% block card_content %}
    {{ content|without('links') }}
  {% endblock %}
{% endembed %}
