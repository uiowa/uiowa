{%
  set row_item_classes = [
  'card--person-teaser',
  'card--media-left',
  'media--border',
  'card--centered-left',
  'card--alignment-left',
  'media--circle',
  'card__media--small',
  'card__media'
]
%}

{% set style_classes = [] %}
{% set size_classes = [] %}

{% for style in row_item_classes %}
  {% if style starts with 'media--' %}
    {% set style_classes = style_classes | merge([style]) %}
  {% endif %}
  {% if style starts with 'card__media' %}
    {% set size_classes = size_classes | merge([style]) %}
  {% endif %}
{% endfor %}

