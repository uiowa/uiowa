{% block banner_bg %}
  {% if banner_bg_image %}
    <div class="banner {{ banner_classes }}" {% if banner_bg_image %} style="background-image: url('{% spaceless %}{{ banner_bg_image }}{% endspaceless %}'); background-size: cover; background-position: center" {% endif %}>
    {% endif %}
  {% endblock %}

  {% if banner_image %}
    <img class="banner__image" src="{{ banner_image }}"/>
  {% endif %}
  <div class="banner__container">

    {% block heading %}
      {% if banner_title is not empty %}
        {% include "@heading" with {
          "heading_level" : 'h3',
          "heading_class" : 'banner__title',
          "heading" : banner_title
        } %}
      {% endif %}
    {% endblock %}

    {% if banner_summary is not empty %}
      <p class="banner__summary">{{ banner_summary }}</p>
    {% endif %}
    {% if banner_link_url is not empty %}
      <a href="{{ banner_link_url }}" class="bttn bttn--tertiary">{{ banner_link_title }}</a>
    {% endif %}
  </div>
</div>
