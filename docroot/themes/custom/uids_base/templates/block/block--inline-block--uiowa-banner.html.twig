{#
/**
 * @file
 * Theme override to display a block.
 *
 * Available variables:
 * - plugin_id: The ID of the block implementation.
 * - label: The configured label of the block if visible.
 * - configuration: A list of the block's configuration values.
 *   - label: The configured label for the block.
 *   - label_display: The display settings for the label.
 *   - provider: The module or other provider that provided this block plugin.
 *   - Block plugin specific settings will also be stored here.
 * - content: The content of this block.
 * - attributes: array of HTML attributes populated by modules, intended to
 *   be added to the main container tag of this template.
 *   - id: A valid HTML ID and guaranteed unique.
 * - title_attributes: Same as attributes, except applied to the main title
 *   tag that appears in the template.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @see template_preprocess_block()
 */
#}

{% set styles = elements['#layout_builder_style'] %}
{% set headline_classes = [] %}
{% set highlight_classes = [] %}
{% set background_classes = [] %}

{% for style in styles %}
  {# Remove background pattern styles if image exists #}
  {% if content.field_uiowa_banner_image[0]['#media'] is not empty %}
    {% if style starts with 'bg-' %}
      {% set background_classes = background_classes|merge([style]) %}
    {% endif %}
  {% endif %}
  {# Remove headline classes from attributes #}
  {% if style starts with 'bold-headline' %}
    {% set headline_classes = headline_classes|merge([style]) %}
  {% endif %}
  {# Change link style to bttn--secondary if headline style is set to highlight #}
  {% if style starts with 'bold-headline--highlight' %}
    {% set highlight_classes = 'bttn bttn--secondary bttn--caps' %}
  {% endif %}
{% endfor %}
{{ kint() }}
{% set block_banner = {
  'banner_image': content.field_uiowa_banner_image,
  'banner_summary': content.field_uiowa_banner_excerpt,
  'attributes': attributes.removeClass(headline_classes,background_classes),
  'banner_title': content.field_uiowa_banner_title[0]['#text'],
  'headline_level': content.field_uiowa_banner_title[0]['#size'],
  'headline_class' : headline_classes,
  'banner_aria_describedby': content.field_uiowa_banner_title[0]['#text']|clean_id,
  'link': {
    'link_url': content.field_uiowa_banner_link[0]['#url'],
    'link_text': content.field_uiowa_banner_link[0]['#title']|render,
    'link_classes': highlight_classes ?: 'bttn bttn--primary bttn--caps',
  },
  'title_prefix': title_prefix,
  'title_suffix': title_suffix,
} %}

{% embed '@uids_base/uids/banner.html.twig' with block_banner only %}

  {% block banner_image %}
  {{ parent() }}
  {# Embed contextual links so that they'll show up in the upper right-hand corner. #}
  {{ title_prefix }}
  {{ title_suffix }}
  {% endblock banner_image %}

{% endembed %}
