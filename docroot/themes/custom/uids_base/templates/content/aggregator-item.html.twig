{#
/**
 * @file
 * Theme override to present a feed item in an aggregator page.
 *
 * Available variables:
 * - url: URL to the originating feed item.
 * - title: (optional) Title of the feed item.
 * - content: All field items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given element.
 * - attributes: HTML attributes for the wrapper.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @see template_preprocess_aggregator_item()
 */
#}
{%
  set classes = [
  'aggregator-item',
]
%}

{{ attach_library('uids_base/events') }}

{# Set the event icon #}
{% set event_icon = '<span class="fas fa-user"></span>' %}

{% set event_block = {
  'attributes': attributes.addClass(classes),
  'event_image': feed_image|render,
  'event_title': title|render,
  'title_prefix': title_prefix,
  'title_suffix': title_suffix,
  'event_url': url,
  'event_date': content.timestamp,
  'heading_level': heading_size,
  'event_icon': event_icon|trans,
  'event_location': content.author|render,
  'event_description': content.description,
} %}

{% embed '@uids_base/uids/event.html.twig' with event_block only %}

	{% block heading %}
		{{ title_prefix }}
		{{ parent() }}
		{{ title_suffix }}
	{% endblock %}

{% endembed %}
