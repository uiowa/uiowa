{#
/**
 * @file
 * Theme override to present a feed item in an aggregator page.
 *
 * Available variables:
 * - url: URL to the originating feed item.
 * - title: (optional) Title of the feed item.
 * - content: All field items. Use {{ content }} to print them all,
 *   or print a subset such as {{ content.field_example }}. Use
 *   {{ content|without('field_example') }} to temporarily suppress the printing
 *   of a given element.
 * - attributes: HTML attributes for the wrapper.
 * - title_prefix: Additional output populated by modules, intended to be
 *   displayed in front of the main title tag that appears in the template.
 * - title_suffix: Additional output populated by modules, intended to be
 *   displayed after the main title tag that appears in the template.
 *
 * @see template_preprocess_aggregator_item()
 */
#}
{%
  set classes = [
  'aggregator-item',
]
%}

{{ attach_library('uids_base/card') }}

{# Set the user icon #}
{% set user_icon = '<span class="fas fa-user"></span>' %}

{% set aggregator_card = {
  'attributes': attributes.addClass(classes),
  'card_image': feed_image|render,
  'card_title': title|render,
  'title_prefix': title_prefix,
  'title_suffix': title_suffix,
  'card_link_url': url,
  'card_date': post_date,
  'headline_level': heading_size,
  'event_icon': user_icon|trans,
  'card_subtitle': content.author|render,
  'card_text': content.description,
} %}

{% embed '@uids_base/uids/card.html.twig' with aggregator_card only %}

	{% block heading %}
		{{ title_prefix }}
		{{ parent() }}
		{{ title_suffix }}
	{% endblock %}

{% endembed %}
