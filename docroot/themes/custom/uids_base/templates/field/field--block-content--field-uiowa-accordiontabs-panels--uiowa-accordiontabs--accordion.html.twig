{% set accordion_items = items|map(i => {
  'label': i.content.field_uiowa_panel_title|render,
  'content': i.content|without('field_uiowa_panel_title')|render,
}) %}

{% set accordion = {
  'accordion_items': accordion_items,
  'accordion_h_size': h_size|render,
}%}

