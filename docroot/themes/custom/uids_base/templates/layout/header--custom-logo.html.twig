{% extends '@uids_base/layout/header.html.twig' %}

{%  block logo %}
  <div class="iowa-bar__custom-logo">
    {{ attach_library('uids_base/logo') }}
    {% include '@uids_base/uids/logo.twig' with {
      path: uiowa_url,
      logo_classes: 'logo--tab',
      logo_path: uiowa_logo_path,
      logo_path_png: uiowa_logo_path_png,
      logo_id: 'header',
    } %}
  </div>
{% endblock %}
{% block uiowa_bar %}
  {{ attach_library('uids_base/site-slogan') }}

  {% if site_has_parent %}
    {% include '@uids_base/uids/site-parent.html.twig' with {
      'parent_name': site_parent_name,
      'parent_url': site_parent_url,
    } %}
  {% endif %}
{% endblock %}

{% block tertiary_content %}
  <div class="iowa-bar__below iowa-bar__custom-logo {{ header_nav }}">
    <div class="iowa-bar__container">

      {{ attach_library('uids_base/site-name') }}
      {% include '@uids_base/uids/site-name.html.twig' with {
        'site_name': site_name,
        'site_url': path('<front>'),
      } %}

      {% if page.logo %}
          {{ page.logo }}
      {% endif %}

      {% if page.search %}
        {% include '@uids_base/uids/global/search-toggle.html.twig' with {
          'search_form': page.search,
        } %}
      {% endif %}
      {% if page.action_menu %}
        {{ page.action_menu }}
      {% endif %}
      {% if page.primary_menu %}
        {% if header_nav == 'toggle' %}
          {% include '@uids_base/navigation/off-canvas.html.twig' %}
        {% endif %}
      {% endif %}
    </div>
  </div>
{% endblock %}
