{{ attach_library('uids_base/header') }}
{% if header_sticky %}
{{ attach_library('uids_base/header-sticky') }}
{% endif %}


<header{{ attributes.addClass(header_classes) }}>

    <div class="uiowa-bar">
        <div class="page__container">

            {% block logo %}

                {% if not branding_legacy %}
                    {{ attach_library('uids_base/logo') }}
                    {% include '@uids/03 - global/logo/logo.twig' with {
                        path: uiowa_url,
                        logo_color: 'logo-icon--secondary',
                        logo_classes: 'logo-icon--tab',
                        logo_path: uiowa_logo_path,
                    } %}
                {% endif %}

            {% endblock %}

            {% block uiowa_bar %}
                {# UIowa bar content #}
            {% endblock %}
        </div>
    </div>

    {% block tertiary_content %}
        {# Tertiary content #}
    {% endblock %}
</header>

{% block horizontal_nav %}

{% if header_nav in ['horizontal', 'mega'] %}
    {# @todo Convert to template use attributes to add classes. #}
    <nav class="menu-horizontal nav--{{ header_type }}">
        <div class="page__container">
            {{ page.primary_menu }}
        </div>
    </nav>
{% endif %}

{% endblock %}
