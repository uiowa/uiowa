{#
/**
 * @file
 * Default theme implementation to display a one column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 * @see https://www.drupal.org/docs/8/api/layout-api/how-to-register-layouts
 * @see https://v4-alpha.getbootstrap.com/layout/grid/
 */
#}

{% set background = content.background | render %}
{% if background is not empty and (featured_image_display is not empty) %}
  {% embed "@uids_base/uids/banner.html.twig" with {
    'attributes' : attributes.addClass(layout.template|clean_class),
  } %}
    {% block banner_image %}
      <div class="banner__image">
        {{ background }}
      </div>
    {% endblock %}
    {% block heading %}
      {{ content.content }}
    {% endblock %}
  {% endembed %}
{% else %}
  {% include '@uids_base/layouts/layout.html.twig' %}
{% endif %}
