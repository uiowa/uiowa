{#
/**
 * @file
 * Default theme implementation to display a one column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 * @see https://www.drupal.org/docs/8/api/layout-api/how-to-register-layouts
 * @see https://v4-alpha.getbootstrap.com/layout/grid/
 */
#}

{% set background = content.background | render %}
{% if background is not empty %}
  {% set classes = [
    'banner--gradient-bottom',
    'banner--gradient-dark',
    'banner--horizontal-left',
    'banner--' ~ featured_image_display,
    'banner--vertical-bottom',
    layout.template|clean_class,
  ] %}
  {% embed "@uids_base/uids/banner.html.twig" with {
    'attributes' : attributes.addClass(classes),
  } %}
    {% block banner_image %}
      <div class="banner__image">
        {{ background }}
      </div>
    {% endblock %}
    {% block heading %}
      {{ content.content }}
    {% endblock %}
  {% endembed %}
{% else %}
  {% include '@uids_base/layouts/layout.html.twig' %}
{% endif %}
