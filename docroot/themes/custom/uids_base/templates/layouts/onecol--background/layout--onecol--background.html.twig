{#
/**
 * @file
 * Default theme implementation to display a one column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 * @see https://www.drupal.org/docs/8/api/layout-api/how-to-register-layouts
 * @see https://v4-alpha.getbootstrap.com/layout/grid/
 */
#}
{% set background = content.background | render %}

{%
  set classes = [
  has_node_image ? 'layout--onecol--background',
  not has_node_image ? 'layout--onecol--no--background',
]
%}

{% set attributes = attributes.addClass(classes) %}

{% if has_node_image %}
  {% embed "@uids_base/uids/hero.html.twig" with {
    hero_alignment : 'bottom',
    'attributes' : attributes,
  } %}
    {% block hero_image %}
      {{ content.background }}
    {% endblock %}
    {% block hero_content %}
      {{ content.content }}
    {% endblock %}
  {% endembed %}
{% else %}
  {% include '@uids_base/layouts/layout.html.twig' %}
{% endif %}
