{#
/**
 * @file
 * Default theme implementation to display a one column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 * @see https://www.drupal.org/docs/8/api/layout-api/how-to-register-layouts
 * @see https://v4-alpha.getbootstrap.com/layout/grid/
 */
#}
{% set has_uids_menu = content.sidebar['c8d974cb-667f-4e0d-8716-d2a77004e0e1']['#layout_builder_style']['0'] %}
{% set has_featured_image = content.content['8be51334-4e07-4621-bddf-6b9942b862e2']['content']['0'] %}

{%
  set classes = [
  'layout',
  'layout--page--paragraph',
  'layout__container',
  settings.extra_classes,
  has_uids_menu ? 'uids-menu-enabled' : 'uids-menu-disabled',
]
%}
{{ attach_library('uids_base/sitenow') }}
{{ attach_library('uids_base/paragraph-page') }}

{% if content.sidebar or content.content %}
  <div{{attributes.addClass(classes)}}>
{{ content.content['8be51334-4e07-4621-bddf-6b9942b862e2']['content'] }}

{% if has_featured_image is empty %}
	<div class="container container--title">
		{{ breadcrumb }}
		<h1 class="bold-headline--serif bold-headline">{{ drupal_title() }}</h1>
	</div>
{% endif %}

    <div class="lb__container">
      {% if content.sidebar %}
        <div class="layout__region layout__region--sidebar">

          {% if region_attributes.sidebar.storage['data-region'] %}
            {{ attach_library('uids_base/admin') }}
            <div {{ region_attributes.sidebar.addClass('flex__wrapper') }}>
            {% endif %}
            {{ content.sidebar }}
            {% if region_attributes.sidebar.storage['data-region'] %}
            </div>
          {% endif %}
        </div>
    {% endif %}

    {% if content.content %}
      <div class="layout__region layout__region--main">
        {% if region_attributes.content.storage['data-region'] %}
          {{ attach_library('uids_base/admin') }}
          <div {{ region_attributes.content.addClass('flex__wrapper') }}>
          {% endif %}
          {{ content.content|without('8be51334-4e07-4621-bddf-6b9942b862e2') }}
          {% if region_attributes.content.storage['data-region'] %}
          </div>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

{% endif %}
