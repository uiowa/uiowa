<div class="sitenow-event-single">
    <div id="sitenow-event" class="sitenow-event sitenow-event-{{ event.id }}">
        <div id="main-column" class="main-column">
            {% if event.canceled is not empty %}
              <div class="event-canceled">
                <span class="badge badge--orange">Canceled</span>
              </div>
            {% endif %}
            <div class="event-time">
                {{ event.date_instances }}
            </div>
            {% if event.location_name|length %}
            <div class="event-location">
                {{ event.location_name }}
                {% if event.room_number|length %}
                {{ event.room_number }}
                {% endif %}
            </div>
            {% endif %}
            {% if event.address|length %}
            <div class="event-address">
                {{ event.address }}
            </div>
            {% endif %}
            {% if event.description|length %}
            <div class="event-description">
                {{ event.description|raw }}
            </div>
            {% endif %}
            {% if event.custom_fields.contact_name|length %}
            <div class="contact-info">
                Contact Info: {{ event.custom_fields.contact_name }}
                {% if event.custom_fields.contact_email|length %}
                , {{ event.custom_fields.contact_email }}
                {% if event.custom_fields.contact_phone_number|length %}
                , {{ event.custom_fields.contact_phone_number }}
                {% endif %}
                {% endif %}
            </div>
            {% endif %}
        </div>
        <div id="secondary-column" class="secondary-column">
            {{ event.event_image }}
            <a href="{{ event.events_site_url }}" role="button" class="btn btn-primary">View on Event Calendar</a>
        </div>
    </div>
    <div class="sitenow-event-accessibility-statement">
        <em>{{ event.accessibility_statement }}</em>
    </div>
</div>
